<section id="lokacija" class="py-24 md:py-32 bg-cream-100">
  <div class="max-w-6xl mx-auto px-6">
    <div class="text-center mb-16 fade-in">
      <div class="flex items-center justify-center gap-4 mb-8">
        <div class="w-12 h-px bg-gold-500"></div>
        <p class="text-gold-600 text-sm tracking-[0.3em] uppercase">Kje se vidimo</p>
        <div class="w-12 h-px bg-gold-500"></div>
      </div>
      <h2 class="text-3xl md:text-5xl font-heading font-bold text-teal-900">
        Lokacija
      </h2>
    </div>

    <div class="fade-in grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
      <!-- Map -->
      <div class="rounded-2xl overflow-hidden shadow-lg aspect-[4/3]">
        <iframe
          src="https://maps.google.com/maps?q=%C4%8Cate%C5%BE+18,+8212+Velika+Loka,+Slovenia&z=15&output=embed"
          class="w-full h-full border-0"
          loading="lazy"
          title="Zemljevid - Čatež pri Trebnjem"
        ></iframe>
      </div>

      <!-- Info -->
      <div>
        <h3 class="text-2xl font-heading font-bold text-teal-900 mb-4">
          Izhodiščna točka
        </h3>
        <p class="text-teal-800/70 leading-relaxed mb-6">
          Zbor je v <strong class="text-teal-900">Urbanovi kleti VTD Čatež</strong>,
          v bližini kraja Čatež pri Trebnjem. Od tam se odpravimo na pot
          po treh vinskih kleteh v okolici.
        </p>

        <div class="space-y-4">
          <div class="flex items-start gap-3">
            <svg class="w-5 h-5 text-gold-500 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
            </svg>
            <div>
              <p class="text-sm font-semibold text-teal-900">Naslov</p>
              <p class="text-sm text-teal-800/60">Čatež 18, 8212 Velika Loka</p>
            </div>
          </div>

          <div class="flex items-start gap-3">
            <svg class="w-5 h-5 text-gold-500 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
            </svg>
            <div>
              <p class="text-sm font-semibold text-teal-900">Datum in ura</p>
              <p class="text-sm text-teal-800/60">Sobota, 18. april 2026 ob 13:00</p>
            </div>
          </div>

          <div class="flex items-start gap-3">
            <svg class="w-5 h-5 text-gold-500 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 18.75a1.5 1.5 0 0 1-3 0m3 0a1.5 1.5 0 0 0-3 0m3 0h6m-9 0H3.375a1.125 1.125 0 0 1-1.125-1.125V14.25m17.25 4.5a1.5 1.5 0 0 1-3 0m3 0a1.5 1.5 0 0 0-3 0m3 0h1.125c.621 0 1.129-.504 1.09-1.124a17.902 17.902 0 0 0-3.213-9.193 2.056 2.056 0 0 0-1.58-.86H14.25M16.5 18.75h-2.25m0-11.177v-.958c0-.568-.422-1.048-.987-1.106a48.554 48.554 0 0 0-10.026 0 1.106 1.106 0 0 0-.987 1.106v7.635m12-6.677v6.677m0 4.5v-4.5m0 0h-12" />
            </svg>
            <div>
              <p class="text-sm font-semibold text-teal-900">Parkiranje</p>
              <p class="text-sm text-teal-800/60">Brezplačno parkiranje pri Urbanovi kleti</p>
            </div>
          </div>

          <div class="flex items-start gap-3">
            <svg class="w-5 h-5 text-gold-500 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z" />
            </svg>
            <div>
              <p class="text-sm font-semibold text-teal-900">Informacije</p>
              <p class="text-sm text-teal-800/60"><a href="tel:051255890" class="hover:text-gold-600 transition-colors">051 255 890</a> (Aljaž)</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

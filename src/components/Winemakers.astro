---
const winemakers = [
  {
    name: 'Vinska klet Kolenc',
    description: 'Družinska tradicija vinarjenja, ki se prenaša iz roda v rod. Znani po izjemnih belih vinih z značilnim dolenjskim karakterjem.',
    speciality: 'Bela vina',
    image: '/images/kolenc.jpg',
  },
  {
    name: 'Vinska klet Kresal',
    description: 'Sodobni pristop k vinarjenju z globokim spoštovanjem do tradicije. Vina, ki odražajo terroir dolenjskih gričev.',
    speciality: 'Avtohtone sorte',
    image: '/images/kresal.jpg',
  },
  {
    name: 'Vinska klet Ravnikar',
    description: 'Butični vinar s strastjo do narave in vinograda. Majhne serije vin z velikim značajem in zgodbo.',
    speciality: 'Butična vina',
    image: '/images/ravnikar.jpg',
  },
];
---

<section id="vinarji" class="py-24 md:py-32 bg-cream-50">
  <div class="max-w-6xl mx-auto px-6">
    <div class="text-center mb-16 fade-in">
      <div class="flex items-center justify-center gap-4 mb-8">
        <div class="w-12 h-px bg-gold-500"></div>
        <p class="text-gold-600 text-sm tracking-[0.3em] uppercase">Vaši gostitelji</p>
        <div class="w-12 h-px bg-gold-500"></div>
      </div>
      <h2 class="text-3xl md:text-5xl font-heading font-bold text-teal-900">
        Spoznajte vinarje
      </h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {winemakers.map((wm) => (
        <div class="fade-in group">
          <div class="aspect-[4/3] rounded-2xl overflow-hidden mb-6 relative">
            <img
              src={wm.image}
              alt={wm.name}
              class="absolute inset-0 w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-teal-950/60 to-transparent"></div>
            <div class="absolute bottom-4 left-4">
              <span class="bg-gold-500/90 text-teal-950 text-xs font-semibold px-3 py-1 rounded-full">
                {wm.speciality}
              </span>
            </div>
          </div>

          <h3 class="text-xl font-heading font-bold text-teal-900 mb-2 group-hover:text-gold-600 transition-colors">
            {wm.name}
          </h3>
          <p class="text-teal-800/60 text-sm leading-relaxed">
            {wm.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>

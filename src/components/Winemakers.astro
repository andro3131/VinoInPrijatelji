---
const winemakers = [
  {
    id: 'kolenc',
    name: 'Vinska klet Kolenc',
    summary: 'Tri generacije vinarske tradicije v vasici Gorenja vas pri Mirni. Sveža in zrela vina z južnih leg na 350 m nadmorske višine.',
    fullDescription: 'Posestvo Kolenc je last vinarske družine Kolenc, ki se že tri generacije ukvarja z vinogradništvom. Vinska klet se nahaja v vasici Gorenja vas pri Mirni nad dolino reke Mirne, Dolenjska. Kot družina cenimo zemljo, delo, povezovanje in tradicijo, hkrati pa vpeljujemo nove pristope v pridelavi ter pridelujemo vina modernega stila. Pri nas boste lahko poskusili tako sveža kot tudi zrela vina, katerih grozdje je dozorelo v vinogradih sončnih južnih leg, na dobrih 350 m nadmorske višine. Želimo, da je vino naravno. Torej fermentiran sok grozdja, ki močno zrcali svoj izvor.',
    speciality: 'Bela vina',
    image: '/images/kolenc.jpg',
    gallery: ['/images/kolenc-1.jpg', '/images/kolenc-2.jpg', '/images/kolenc-3.jpg', '/images/kolenc-4.jpg', '/images/kolenc-5.jpg'],
  },
  {
    id: 'kresal',
    name: 'Vinska klet Kresal',
    summary: 'Sodobni pristop k vinarjenju z globokim spoštovanjem do tradicije. Vina, ki odražajo terroir dolenjskih gričev.',
    fullDescription: 'Sodobni pristop k vinarjenju z globokim spoštovanjem do tradicije. Vina, ki odražajo terroir dolenjskih gričev.',
    speciality: 'Avtohtone sorte',
    image: '/images/kresal.jpg',
    gallery: ['/images/kresal-1.jpg', '/images/kresal-2.jpg', '/images/kresal-3.jpg', '/images/kresal-4.jpg'],
  },
  {
    id: 'ravnikar',
    name: 'Vinska klet Ravnikar',
    summary: 'Na sončnem pobočju Dolenjske stoji Ravnikarjeva zidanica, obdana z vinogradi in tišino narave.',
    fullDescription: 'Na sončnem pobočju Dolenjske stoji Ravnikarjeva zidanca, obdana z vinogradi in tišino narave. V njej se prepletata tradicija, domačnost in ljubezen do vina, ki nastaja le nekaj korakov stran v kleti. To je prostor za umik, uživanje v razgledih in počasne trenutke ob kozarcu domačega vina.',
    speciality: 'Butična vina',
    image: '/images/ravnikar.jpg',
    gallery: ['/images/ravnikar-2.jpg'],
  },
];
---

<section id="vinarji" class="py-24 md:py-32 bg-cream-50">
  <div class="max-w-6xl mx-auto px-6">
    <div class="text-center mb-16 fade-in">
      <div class="flex items-center justify-center gap-4 mb-8">
        <div class="w-12 h-px bg-gold-500"></div>
        <p class="text-gold-600 text-sm tracking-[0.3em] uppercase">Vaši gostitelji</p>
        <div class="w-12 h-px bg-gold-500"></div>
      </div>
      <h2 class="text-3xl md:text-5xl font-heading font-bold text-teal-900">
        Spoznajte vinarje
      </h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {winemakers.map((wm) => (
        <div class="fade-in group cursor-pointer" data-winemaker={wm.id}>
          <div class="aspect-[4/3] rounded-2xl overflow-hidden mb-6 relative">
            <img
              src={wm.image}
              alt={wm.name}
              class="absolute inset-0 w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-teal-950/60 to-transparent"></div>
            <div class="absolute bottom-4 left-4">
              <span class="bg-gold-500/90 text-teal-950 text-xs font-semibold px-3 py-1 rounded-full">
                {wm.speciality}
              </span>
            </div>
          </div>

          <h3 class="text-xl font-heading font-bold text-teal-900 mb-2 group-hover:text-gold-600 transition-colors">
            {wm.name}
          </h3>
          <p class="text-teal-800/60 text-sm leading-relaxed mb-3">
            {wm.summary}
          </p>
          <span class="text-gold-600 text-sm font-medium inline-flex items-center gap-1 group-hover:gap-2 transition-all">
            Več o vinarju
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
            </svg>
          </span>
        </div>
      ))}
    </div>
  </div>
</section>

<!-- Modal -->
<div id="winemaker-modal" class="fixed inset-0 z-[100] hidden">
  <div class="absolute inset-0 bg-teal-950/80 backdrop-blur-sm" id="modal-backdrop"></div>
  <div class="relative z-10 flex items-center justify-center min-h-screen p-4 md:p-8">
    <div class="bg-cream-50 rounded-3xl max-w-3xl w-full max-h-[90vh] overflow-y-auto shadow-2xl">
      <!-- Close button -->
      <button id="modal-close" class="absolute top-6 right-6 w-10 h-10 bg-teal-950/60 hover:bg-teal-950/80 text-white rounded-full flex items-center justify-center transition-colors z-20 cursor-pointer">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
        </svg>
      </button>

      <!-- Modal content (populated by JS) -->
      <div id="modal-content"></div>
    </div>
  </div>
</div>

<script is:inline define:vars={{ winemakers }}>
  // Winemaker data for modal
  const wmData = winemakers;

  function openModal(id) {
    const wm = wmData.find(w => w.id === id);
    if (!wm) return;

    const modal = document.getElementById('winemaker-modal');
    const content = document.getElementById('modal-content');

    const galleryHtml = wm.gallery.length > 0
      ? `<div class="grid grid-cols-2 md:grid-cols-3 gap-3 mt-6">
          ${wm.gallery.map((img, i) => `
            <img
              src="${img}"
              alt="${wm.name} - slika ${i + 1}"
              class="rounded-xl w-full aspect-square object-cover hover:scale-[1.02] transition-transform cursor-pointer gallery-img"
              loading="lazy"
            />
          `).join('')}
        </div>`
      : '';

    content.innerHTML = `
      <div class="aspect-[2/1] rounded-t-3xl overflow-hidden relative">
        <img src="${wm.image}" alt="${wm.name}" class="w-full h-full object-cover" />
        <div class="absolute inset-0 bg-gradient-to-t from-teal-950/60 to-transparent"></div>
        <div class="absolute bottom-6 left-8">
          <span class="bg-gold-500/90 text-teal-950 text-xs font-semibold px-3 py-1 rounded-full">${wm.speciality}</span>
        </div>
      </div>
      <div class="p-8 md:p-10">
        <h3 class="text-2xl md:text-3xl font-heading font-bold text-teal-900 mb-4">${wm.name}</h3>
        <p class="text-teal-800/70 leading-relaxed">${wm.fullDescription}</p>
        ${galleryHtml}
      </div>
    `;

    modal.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
  }

  function closeModal() {
    const modal = document.getElementById('winemaker-modal');
    modal.classList.add('hidden');
    document.body.style.overflow = '';
  }

  // Card clicks
  document.querySelectorAll('[data-winemaker]').forEach(card => {
    card.addEventListener('click', () => {
      openModal(card.dataset.winemaker);
    });
  });

  // Close modal
  document.getElementById('modal-backdrop')?.addEventListener('click', closeModal);
  document.getElementById('modal-close')?.addEventListener('click', closeModal);
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') closeModal();
  });
</script>

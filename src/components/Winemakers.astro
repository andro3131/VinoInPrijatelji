---

<section id="vinarji" class="py-24 md:py-32 bg-cream-50">
  <div class="max-w-6xl mx-auto px-6">
    <div class="text-center mb-16 fade-in">
      <div class="flex items-center justify-center gap-4 mb-8">
        <div class="w-12 h-px bg-gold-500"></div>
        <p class="text-gold-600 text-sm tracking-[0.3em] uppercase">Vaši gostitelji</p>
        <div class="w-12 h-px bg-gold-500"></div>
      </div>
      <h2 class="text-3xl md:text-5xl font-heading font-bold text-teal-900">
        Spoznajte vinarje
      </h2>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
      {winemakers.map((wm) => (
        <div class="fade-in group cursor-pointer" data-winemaker={wm.id}>
          <div class="aspect-[4/3] rounded-2xl overflow-hidden mb-6 relative">
            <img
              src={wm.image}
              alt={wm.name}
              class="absolute inset-0 w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
              style={wm.thumbPosition ? `object-position: center ${wm.thumbPosition}` : ''}
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-teal-950/60 to-transparent"></div>
            <div class="absolute bottom-4 left-4">
              <span class="bg-gold-500/90 text-teal-950 text-xs font-semibold px-3 py-1 rounded-full">
                {wm.speciality}
              </span>
            </div>
          </div>

          <h3 class="text-xl font-heading font-bold text-teal-900 mb-2 group-hover:text-gold-600 transition-colors">
            {wm.name}
          </h3>
          <p class="text-teal-800/60 text-sm leading-relaxed mb-3">
            {wm.summary}
          </p>
          <span class="text-gold-600 text-sm font-medium inline-flex items-center gap-1 group-hover:gap-2 transition-all">
            Več o vinarju
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
            </svg>
          </span>
        </div>
      ))}
    </div>
  </div>
</section>

<!-- Modal -->
<div id="winemaker-modal" class="fixed inset-0 z-[100] hidden">
  <div class="absolute inset-0 bg-teal-950/80 backdrop-blur-sm" id="modal-backdrop"></div>
  <div class="relative z-10 overflow-y-auto max-h-screen p-4 md:p-8" id="modal-overlay">
    <div class="bg-cream-50 rounded-3xl max-w-3xl w-full mx-auto shadow-2xl" id="modal-box">
      <!-- Close button -->
      <button id="modal-close" class="absolute top-6 right-6 w-10 h-10 bg-teal-950/60 hover:bg-teal-950/80 text-white rounded-full flex items-center justify-center transition-colors z-20 cursor-pointer">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
        </svg>
      </button>

      <!-- Modal content (populated by JS) -->
      <div id="modal-content"></div>
    </div>
  </div>
</div>

<script is:inline define:vars={{ winemakers }}>
  // Winemaker data for modal
  const wmData = winemakers;

  function openModal(id) {
    const wm = wmData.find(w => w.id === id);
    if (!wm) return;

    const modal = document.getElementById('winemaker-modal');
    const content = document.getElementById('modal-content');

    const allImages = [wm.image, ...wm.gallery];

    const galleryHtml = allImages.length > 1
      ? `<div class="grid grid-cols-3 md:grid-cols-4 gap-3 mt-6">
          ${allImages.map((img, i) => `
            <img
              src="${img}"
              alt="${wm.name} - slika ${i + 1}"
              class="rounded-xl w-full aspect-square object-cover hover:scale-[1.02] transition-transform cursor-pointer gallery-thumb ${i === 0 ? 'ring-2 ring-gold-500' : 'opacity-70 hover:opacity-100'}"
              data-full="${img}"
              loading="lazy"
            />
          `).join('')}
        </div>`
      : '';

    content.innerHTML = `
      <div class="p-8 md:p-10 pb-4">
        <span class="bg-gold-500/90 text-teal-950 text-xs font-semibold px-3 py-1 rounded-full">${wm.speciality}</span>
        <h3 class="text-2xl md:text-3xl font-heading font-bold text-teal-900 mt-4 mb-4">${wm.name}</h3>
        <p class="text-teal-800/70 leading-relaxed">${wm.fullDescription}</p>
      </div>
      <div class="overflow-hidden relative mx-4 md:mx-6 rounded-2xl" id="modal-hero" style="max-height: 70vh;">
        <img src="${wm.image}" alt="${wm.name}" class="w-full block object-cover transition-opacity duration-300" style="margin-top: -10%; margin-bottom: -10%; min-height: 100%;" id="modal-hero-img" />
      </div>
      <div class="p-8 md:p-10 pt-4">
        ${galleryHtml}
      </div>
    `;

    // Gallery thumbnail click → swap main image
    content.querySelectorAll('.gallery-thumb').forEach(thumb => {
      thumb.addEventListener('click', (e) => {
        e.stopPropagation();
        const heroImg = document.getElementById('modal-hero-img');
        heroImg.style.opacity = '0';
        setTimeout(() => {
          heroImg.src = thumb.dataset.full;
          heroImg.style.opacity = '1';
        }, 150);
        content.querySelectorAll('.gallery-thumb').forEach(t => {
          t.classList.remove('ring-2', 'ring-gold-500');
          t.classList.add('opacity-70');
        });
        thumb.classList.add('ring-2', 'ring-gold-500');
        thumb.classList.remove('opacity-70');
      });
    });

    modal.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
  }

  function closeModal() {
    const modal = document.getElementById('winemaker-modal');
    modal.classList.add('hidden');
    document.body.style.overflow = '';
  }

  // Card clicks
  document.querySelectorAll('[data-winemaker]').forEach(card => {
    card.addEventListener('click', () => {
      openModal(card.dataset.winemaker);
    });
  });

  // Close modal - click outside modal box, on backdrop, or X button
  document.getElementById('modal-overlay')?.addEventListener('click', (e) => {
    if (!document.getElementById('modal-box')?.contains(e.target)) closeModal();
  });
  document.getElementById('modal-backdrop')?.addEventListener('click', closeModal);
  document.getElementById('modal-close')?.addEventListener('click', closeModal);
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') closeModal();
  });
</script>

<section id="vstopnice" class="py-24 md:py-32 bg-teal-900 relative overflow-hidden">
  <!-- Decorative background -->
  <div class="absolute top-0 right-0 w-96 h-96 bg-gold-500/5 rounded-full -translate-y-1/2 translate-x-1/2"></div>
  <div class="absolute bottom-0 left-0 w-64 h-64 bg-gold-500/5 rounded-full translate-y-1/2 -translate-x-1/2"></div>

  <div class="max-w-4xl mx-auto px-6 relative z-10">
    <div class="text-center mb-16 fade-in">
      <div class="flex items-center justify-center gap-4 mb-8">
        <div class="w-12 h-px bg-gold-500/50"></div>
        <p class="text-gold-400 text-sm tracking-[0.3em] uppercase">Omejeno število mest</p>
        <div class="w-12 h-px bg-gold-500/50"></div>
      </div>
      <h2 class="text-3xl md:text-5xl font-heading font-bold text-white">
        Vstopnice
      </h2>
    </div>

    <!-- Pricing card -->
    <div class="fade-in max-w-lg mx-auto">
      <div class="bg-teal-800/50 backdrop-blur-sm border border-gold-500/20 rounded-3xl p-10 md:p-12 text-center">
        <p class="text-gold-400 text-sm tracking-[0.2em] uppercase mb-2">Celodnevno doživetje</p>
        <p class="inline-block bg-gold-500/20 text-gold-400 text-xs font-semibold tracking-wider uppercase px-4 py-1.5 rounded-full mb-4">Early Bird</p>

        <div class="flex items-end justify-center gap-1 mb-2">
          <span class="text-6xl md:text-7xl font-heading font-bold text-white">49,90</span>
          <span class="text-2xl text-white/80 font-heading mb-2">&euro;</span>
          <span class="text-white/50 mb-2 ml-1">/ osebo</span>
        </div>
        <p class="text-white/40 text-sm mb-8">Redna cena: <span class="line-through">54,90 &euro;</span></p>

        <!-- What's included list -->
        <ul class="text-left space-y-3 mb-10">
          <li class="flex items-start gap-3 text-white/80 text-sm">
            <svg class="w-5 h-5 text-gold-500 shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 0 1 .143 1.052l-8 10.5a.75.75 0 0 1-1.127.075l-4.5-4.5a.75.75 0 0 1 1.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 0 1 1.05-.143Z" clip-rule="evenodd" />
            </svg>
            Pijača dobrodošlice
          </li>
          <li class="flex items-start gap-3 text-white/80 text-sm">
            <svg class="w-5 h-5 text-gold-500 shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 0 1 .143 1.052l-8 10.5a.75.75 0 0 1-1.127.075l-4.5-4.5a.75.75 0 0 1 1.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 0 1 1.05-.143Z" clip-rule="evenodd" />
            </svg>
            Vinski kozarec &amp; vrečka
          </li>
          <li class="flex items-start gap-3 text-white/80 text-sm">
            <svg class="w-5 h-5 text-gold-500 shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 0 1 .143 1.052l-8 10.5a.75.75 0 0 1-1.127.075l-4.5-4.5a.75.75 0 0 1 1.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 0 1 1.05-.143Z" clip-rule="evenodd" />
            </svg>
            14 vzorcev vina
          </li>
          <li class="flex items-start gap-3 text-white/80 text-sm">
            <svg class="w-5 h-5 text-gold-500 shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 0 1 .143 1.052l-8 10.5a.75.75 0 0 1-1.127.075l-4.5-4.5a.75.75 0 0 1 1.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 0 1 1.05-.143Z" clip-rule="evenodd" />
            </svg>
            Živa glasba
          </li>
          <li class="flex items-start gap-3 text-white/80 text-sm">
            <svg class="w-5 h-5 text-gold-500 shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 0 1 .143 1.052l-8 10.5a.75.75 0 0 1-1.127.075l-4.5-4.5a.75.75 0 0 1 1.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 0 1 1.05-.143Z" clip-rule="evenodd" />
            </svg>
            Avtobusni prevoz med vinarji
          </li>
          <li class="flex items-start gap-3 text-white/80 text-sm">
            <svg class="w-5 h-5 text-gold-500 shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 0 1 .143 1.052l-8 10.5a.75.75 0 0 1-1.127.075l-4.5-4.5a.75.75 0 0 1 1.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 0 1 1.05-.143Z" clip-rule="evenodd" />
            </svg>
            <span><span class="whitespace-nowrap">AFTR PARTY</span> <span class="text-white/40">(pijača in hrana na AFTR-ju ni vključena)</span></span>
          </li>
          <li class="flex items-start gap-3 text-white/80 text-sm">
            <svg class="w-5 h-5 text-gold-500 shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 0 1 .143 1.052l-8 10.5a.75.75 0 0 1-1.127.075l-4.5-4.5a.75.75 0 0 1 1.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 0 1 1.05-.143Z" clip-rule="evenodd" />
            </svg>
            Organiziran prevoz na izhodišče
          </li>
        </ul>

        <!-- Quantity selector -->
        <div class="flex items-center justify-center gap-4 mb-6">
          <label class="text-white/70 text-sm">Število vstopnic:</label>
          <div class="flex items-center bg-teal-900/80 border border-gold-500/30 rounded-full">
            <button
              id="qty-minus"
              type="button"
              class="w-10 h-10 flex items-center justify-center text-gold-400 hover:text-gold-300 text-xl font-bold transition-colors"
            >
              &minus;
            </button>
            <span id="qty-value" class="w-10 text-center text-white text-lg font-semibold">1</span>
            <button
              id="qty-plus"
              type="button"
              class="w-10 h-10 flex items-center justify-center text-gold-400 hover:text-gold-300 text-xl font-bold transition-colors"
            >
              +
            </button>
          </div>
        </div>

        <a
          href="https://buy.stripe.com/4gM7sLep0a9N5ZD8ff1kA01?quantity=1"
          id="checkout-btn"
          class="block w-full bg-gold-500 hover:bg-gold-400 text-teal-950 py-4 px-8 rounded-full text-lg font-semibold tracking-wide transition-all hover:scale-105 text-center"
        >
          Kupi vstopnico
        </a>

        <p class="text-white/40 text-xs mt-4">
          Varen nakup prek Stripe. Prejmete potrditveni email.
        </p>
      </div>
    </div>
  </div>
</section>

<script>
  const minusBtn = document.getElementById('qty-minus');
  const plusBtn = document.getElementById('qty-plus');
  const qtyValue = document.getElementById('qty-value');
  const checkoutBtn = document.getElementById('checkout-btn') as HTMLAnchorElement;
  const baseUrl = 'https://buy.stripe.com/4gM7sLep0a9N5ZD8ff1kA01';

  let quantity = 1;
  const MAX_QTY = 10;

  function update() {
    qtyValue!.textContent = String(quantity);
    checkoutBtn!.href = `${baseUrl}?quantity=${quantity}`;
    checkoutBtn!.textContent = quantity === 1 ? 'Kupi vstopnico' : `Kupi ${quantity} vstopnic`;
  }

  minusBtn!.addEventListener('click', () => {
    if (quantity > 1) { quantity--; update(); }
  });

  plusBtn!.addEventListener('click', () => {
    if (quantity < MAX_QTY) { quantity++; update(); }
  });
</script>

---

<section class="py-24 md:py-32 bg-cream-100">
  <div class="max-w-6xl mx-auto px-6">
    <div class="text-center mb-16 fade-in">
      <div class="flex items-center justify-center gap-4 mb-8">
        <div class="w-12 h-px bg-gold-500"></div>
        <p class="text-gold-600 text-sm tracking-[0.3em] uppercase">Vse v eni ceni</p>
        <div class="w-12 h-px bg-gold-500"></div>
      </div>
      <h2 class="text-3xl md:text-5xl font-heading font-bold text-teal-900">
        Kaj je vključeno
      </h2>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {items.map((item, i) => (
        <div class="fade-in">
          <div
            class="group bg-white rounded-2xl p-8 shadow-sm hover:shadow-md transition-all hover:-translate-y-1 border border-teal-800/5 card-float h-full"
            style={`animation-duration: ${3 + (i % 3) * 0.8}s; animation-delay: ${i * 0.4}s;`}
          >
            <div class="text-gold-500 mb-4 group-hover:scale-110 transition-transform" set:html={item.icon} />
            <h3 class="text-lg font-heading font-bold text-teal-900 mb-2">{item.title}</h3>
            <p class="text-teal-800/60 text-sm leading-relaxed">{item.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }
  .card-float {
    animation: float 3s ease-in-out infinite;
  }
  .card-float:hover {
    animation-play-state: paused;
  }
</style>
